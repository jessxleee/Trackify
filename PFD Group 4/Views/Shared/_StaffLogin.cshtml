<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OCBC Bank</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container" style="margin-top:100px;">
        <!-- 1st row -->
        <div class="row" style="justify-content:center; margin-top:20px; margin-bottom:16px;" >
            <form method="post" action="~/Home/StaffLogin"class="border border-dark"style="padding-left:30px;padding-right:30px;">
                <div class="text-center"></div>
                <div class="divider d-flex align-items-center py-2">
                    <h3 class="text-center text-dark fw-bold mx-3 mb-0"><b> Log In </b></h3>
                </div>
                <div class="form-outline mt-3 mb-2">
                    <input type="text" name="loginID" id="loginID" class="form-control form-control-lg"
                           placeholder="Enter a valid login ID" required />
                    <label class="form-label" for="loginID">Login ID</label>
                </div>


                <!-- Password input -->
                <div class="form-outline">
                    <input type="password" name="userPassword" id="userPassword" class="form-control form-control-lg"
                           placeholder="Enter password" required />
                    <label class="form-label" for="userPassword">Password</label>
                </div>
                <span style="color:red;">@TempData["Message"]</span>
                <div class="d-flex row" style="margin-top:-17px; justify-content:right; ">
                    <input type="submit" id="btnStaffLogin"
                           class="myButton" value="Login" />
                </div>
                <br />
            </form>
        </div>
    </div>
</body>
</html>